<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_marginStart">@dimen/icon_start_margin</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">@color/blackish</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="settings_text">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grayish</item>
    </style>

    <style name="section_labels">
        <item name="android:textColor">@color/lighter_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>