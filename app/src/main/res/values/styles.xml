<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_marginStart">@dimen/icon_start_margin</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">@color/blackish</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="settings_text">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grayish</item>
    </style>

    <style name="section_labels">
        <item name="android:textColor">@color/lighter_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="toolbar_titles">
        <item name="android:textColor">@color/lighter_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="alert_confirmation">
        <item name="backgroundColor">@color/yellow</item>
        <item name="background">@color/yellow</item>
    </style>

    <style name="AlertDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.Dialog.Alert">
        <!-- Background Color-->
        <item name="android:background">@color/blackish</item>
        <!-- Text Color for title and message -->
        <item name="colorOnSurface">@color/yellow</item>
        <!-- Text Color for buttons -->
        <item name="colorPrimary">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/yellow</item>
        <item name="rippleColor">@color/grayish</item>
        <item name="android:spacing">@dimen/icon_bottom_margin</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@color/blackish</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:spacing">@dimen/icon_bottom_margin</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="layout_background_section">
        <item name="android:elevation">2dp</item>
        <item name="android:background">@drawable/layout_background</item>
        <item name="android:layout_marginStart">@dimen/row_margin</item>
        <item name="android:layout_marginTop">@dimen/row_margin</item>
        <item name="android:layout_marginEnd">@dimen/row_margin</item>
    </style>

    <style name="edit_text">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:elevation">2dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#9EABC1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#fff</item>
        <item name="backgroundColor">@color/blackish</item>
    </style>

</resources>
